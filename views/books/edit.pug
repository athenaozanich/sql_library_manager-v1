extends ../layout

block content
  h1= title
  
  include errors
  
  form(action="/books/"+book.id, method="post", onsubmit="return confirm('Please confirm your updates and press OK');")
    include form
    p
      input(type="submit", value="Update Book")

  form(action="/books/"+book.id+"/delete", method="post", onsubmit="return confirm('Do you really want to delete this book?');")
    p
      a(href="/books", class="button") Cancel
    p
      input(type="submit", value="Delete Book")